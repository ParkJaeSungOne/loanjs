<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
  </head>
  <body>
  <% include ../partials/header %>
    <div class = "col-sm-offset-2 col-sm-8">
      <form class="form-horizontal" action="/users" method="post">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">회원가입</h3>
          </div>
          <div class="panel-body">
            <div class="form-group <%= (errors.username)?'has-error':'' %>">
              <div class="col-sm-12">
                <input class="form-control" type="text" id="username" name="username" value="<%= user.username %>" placeholder="아이디">
                <% if(errors.username){ %>
                  <span class="help-block"><%= errors.username.message %></span>
                <% } %>
              </div>
            </div>
            <div class="form-group <%= (errors.name)?'has-error':'' %>">
              <div class="col-sm-12">
                <input class="form-control" type="text" id="name" name="name" value="<%= user.name %>" placeholder="이름">
                <% if(errors.name){ %>
                  <span class="help-block"><%= errors.name.message %></span>
                <% } %>
              </div>
            </div>
            <div class="form-group <%= (errors.email)?'has-error':'' %>">
              <div class="col-sm-12">
                <input class="form-control" type="text" id="email" name="email" value="<%= user.email %>" placeholder="이메일">
                <% if(errors.email){ %>
                  <span class="help-block"><%= errors.email.message %></span>
                <% } %>
              </div>
            </div>
            <div class="form-group <%= (errors.password)?'has-error':'' %>">
              <div class="col-sm-12">
                <input class="form-control" type="password" id="password" name="password" value="" placeholder="비밀번호">
                <% if(errors.password){ %>
                  <span class="help-block"><%= errors.password.message %></span>
                <% } %>
              </div>
            </div>
            <div class="form-group <%= (errors.passwordConfirmation)?'has-error':'' %>">
              <div class="col-sm-12">
                <input class="form-control" type="password" id="passwordConfirmation" name="passwordConfirmation" value="" placeholder="비밀번호 재확인">
                <% if(errors.passwordConfirmation){ %>
                  <span class="help-block"><%= errors.passwordConfirmation.message %></span>
                <% } %>
              </div>
            </div>
            <div class="buttons">
              <button type="submit" class="btn btn-default">회원가입</button>
            </div>
            <% if(errors.unhandled){ %>
              <div class="alert alert-danger">
              <%= errors.unhandled %>
              </div>
            <% } %>
          </div>
        </div>
      </form>
      </div>
      </div>
<% include ../partials/footer %>