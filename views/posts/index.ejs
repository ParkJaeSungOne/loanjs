<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
  </head>
  <body>
    <% include ../partials/nav %>

    <div class="container post post-index">
      <div class="buttons">
        <% if(isAuthenticated){ %>
          <a class="btn btn-default" href="/posts/new">New</a>
        <% } %>
      </div>

      <table class="table table-striped">
        <thead>
          <tr>
            <th class="title">제목</th>
            <th class="author">작성자</th>
            <th class="date">작성일시</th>
          </tr>
        </thead>
        <tbody>
          <% if(posts == null || posts.length == 0){ %>
            <tr>
              <td class="noData" colspan=100> 등록된 글이 없습니다. </td>
            </tr>
          <% } %>
          <% posts.forEach(function(post) { %>
            <tr>
              <td class="title">
                <a href="/posts/<%= post._id %>"><div class="ellipsis"><%= post.title %></div></a>
              </td>
              <td class="author">
                <div class="ellipsis"><%= post.author ? post.author.username : "" %></div>
              </td>
              <td class="date">
                <%= post.createdDate %>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>  <!-- container end -->
  </body>
</html>
